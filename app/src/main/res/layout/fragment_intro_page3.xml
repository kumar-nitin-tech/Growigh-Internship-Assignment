<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onBoarding.IntroPage3Fragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/skipIntroButton3"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/noto_sans"
        android:text="@string/skip_intro"
        android:textColor="@color/blueText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/blueText"
        android:layout_marginEnd="18dp"/>

    <ImageView
        android:id="@+id/panaImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bro"
        app:layout_constraintTop_toBottomOf="@id/skipIntroButton3"
        app:layout_constraintBottom_toTopOf="@id/firstCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="35.33dp"
        android:layout_marginEnd="35.33dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/firstCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="35.33dp"
        android:layout_marginEnd="35.33dp"
        android:layout_marginBottom="35.31dp"
        app:cardCornerRadius="48dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card">

            <TextView
                android:id="@+id/ourVisionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30.67dp"
                android:paddingTop="66.52dp"
                android:paddingBottom="10dp"
                android:fontFamily="@font/noto_sans_bold"
                android:text="Our Vision"
                android:textColor="@color/white"
                android:textSize="32sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/bodyText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30.67dp"
                android:layout_marginEnd="30.98dp"
                android:fontFamily="@font/noto_sans"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam"
                android:textColor="@color/whiteLessOp"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ourVisionText"
                android:textAlignment="viewStart"/>


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/readyButton"
                android:layout_width="94dp"
                android:layout_height="94dp"
                app:srcCompat="@drawable/ready"
                app:layout_constraintTop_toBottomOf="@id/bodyText1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="61.79dp"
                android:layout_marginBottom="36.69dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>